<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. DAY -->T
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/purple_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="android:background">@color/Blue</item>
        <item name="itemTextColor">@android:color/white</item>
        <item name="itemIconTint">@android:color/white</item>
    </style>

    <declare-styleable name="RatingDonutView">
        <attr name="progress" format="integer" />
        <attr name="stroke" format="float" />
        <attr name="low_color" format="color" />
        <attr name="mid_low_color" format="color" />
        <attr name="mid_high_color" format="color" />
        <attr name="high_color" format="color" />
    </declare-styleable>

    <style name="BackgroundWatchLater">
        <item name="android:background">@drawable/background_watch_later</item>
    </style>

    <style name="BackgroundFavorites">
        <item name="android:background">@drawable/background_favorites</item>
    </style>

    <style name="BackgroundSettings">
        <item name="android:background">@drawable/background_settings</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="closeIcon">@drawable/ic_baseline_close_24</item>
        <item name="android:background">@drawable/background_search_view</item>
    </style>

    <style name="ItemTextStyle">
        <item name="android:background">@color/CornflowerBlue</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="DescriptionFontStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/description_font_size</item>
        <item name="android:textAlignment">inherit</item>
    </style>

    <style name="expandedToolbarLayoutTitleStyle">
        <item name="android:textColor">@color/no_color_transparent</item>
    </style>

    <style name="collapsingToolbarLayoutTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>