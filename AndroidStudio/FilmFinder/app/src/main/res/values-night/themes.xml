<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. NIGHT-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/PurpleDark</item>
        <item name="colorSecondaryVariant">@color/BlueDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="colorControlNormal">@color/green_on_dark</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/green_on_dark</item>
        <item name="android:textColorHint">@color/green_on_dark</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/green_on_dark</item>
        <item name="android:background">@color/Black</item>
        <item name="navigationIconTint">@color/green_on_dark</item>
        <item name="iconTint">@color/green_on_dark</item>
        <item name="itemTextColor">@color/green_on_dark</item>
        <item name="itemIconTint">@color/green_on_dark</item>
    </style>

    <declare-styleable name="RatingDonutView">
        <attr name="progress" format="integer" />
        <attr name="stroke" format="float" />
        <attr name="low_color" format="color"/>
        <attr name="mid_low_color" format="color"/>
        <attr name="mid_high_color" format="color"/>
        <attr name="high_color" format="color"/>
    </declare-styleable>

    <style name="DescriptionFontStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/green_on_dark</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/description_font_size</item>
        <item name="android:textAlignment">inherit</item>
    </style>

    <style name = "BackgroundWatchLater">
        <item name="android:background">@drawable/background_watch_later</item>
    </style>

    <style name="BackgroundFavorites">
        <item name="android:background">@drawable/background_favorites</item>
    </style>

    <style name="BackgroundSettings">
        <item name="android:background">@drawable/background_settings</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="android:background">@drawable/background_search_view</item>
    </style>

    <style name="ItemTextStyle">
        <item name="android:background">@color/PurpleDark</item>
        <item name="android:textColor">@color/green_on_dark</item>
        <item name="android:textColorHint">@color/green_on_dark</item>
    </style>

    <style name="expandedToolbarLayoutTitleStyle">
        <item name="android:textColor">@color/no_color_transparent</item>
    </style>

    <style name="collapsingToolbarLayoutTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/green_on_dark</item>
    </style>

</resources>